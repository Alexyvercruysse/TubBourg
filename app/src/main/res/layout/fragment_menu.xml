<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexy.tubtabbar.Fragments.MenuFragment"
    android:weightSum="1">

    <Button
        android:id="@+id/connectionButton"
        style="@style/com_facebook_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="20dp"
        android:text="Connexion avec Facebook" />

    <Button
        android:id="@+id/connectionAdminButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Connexion Admin" />

    <TextView
        android:id="@+id/weatherTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Chargement de la météo..."
        android:textColor="@color/cardview_dark_background" />

    <ImageView
        android:id="@+id/imageViewWeather"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/amu_bubble_mask" />

</LinearLayout>
